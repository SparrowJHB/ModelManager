<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/input_dialog_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="新建文件夹"
            android:textSize="16sp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/et_input_dialog_file_manager_dir"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_input_dialog_et_focused"
            android:textSize="12sp"
            android:padding="3dp"
            android:maxLines="1"
            android:textCursorDrawable="@drawable/input_dialog_et_cursor"
            android:hint="请输入文件夹名称" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btn_input_dialog_file_manager_cancel"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_marginRight="2.5dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/input_dialog_btn_cancel"
                android:text="取消" />

            <Button
                android:id="@+id/btn_input_dialog_file_manager_confirm"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_marginLeft="2.5dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/selector_input_dialog_btn_enabled"
                android:enabled="false"
                android:textColor="@drawable/selector_input_dialog_btn_enabled"
                android:text="确定" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>